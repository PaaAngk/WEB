    <div class="container-md">         
        <div class="d-flex row " >
            {% for object in car_objects %}
            <div class="col-md-3 mb-3">
                <div class="border rounded text-center bg-light">
                    <img src="{{object.image}}"  class="img-fluid rounded mb-2 mt-2" alt="">
                    <a  class="btn btn-primary w-100 " href="/car-object/{{object.id}}">{{object.title}}</a>
                    <div class="row p-2">
                        <a  class="btn nav-link col-6" href="/car-object/{{object.id}}?show=image">Картинка</a>
                        <a  class="btn nav-link col-6" href="/car-object/{{object.id}}?show=info">Описание</a>
                    </div>   
                </div>   
            </div>     
            {% endfor %}
        </div>   
    </div>
                    
{% endblock %}

